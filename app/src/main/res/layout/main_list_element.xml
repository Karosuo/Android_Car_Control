<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/element_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/element_duration"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/element_date"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/element_time"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <TextView
        android:id="@+id/element_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16dp"
        android:layout_below="@+id/element_title" />

    <ImageView
        android:id="@+id/element_image"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="#aaa"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/element_title"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>